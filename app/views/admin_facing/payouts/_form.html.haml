= simple_form_for(@payout) do |f|
  = f.error_notification

  .body
    .form-inputs
      .form-group
        = f.association :user, collection: Counselor.all, :value_method => :user_id, :label_method => :name_with_identifier, :input_html => { :class => "form-control" }, :include_blank => false, :label => "Counselor"
      .form-group
        / = f.input :total_in_cents, :input_html => { :class => "form-control" }
        .input.integer.optional.payout_total_in_dollars
          %label.integer.optional.control-label{:for => "payout_total_in_dollars"}
            TOTAL IN DOLLARS
          %input.numeric.integer.optional.form-control{:type => "number", :name => "payout[total_in_dollars]", :id => "payout_total_in_dollars"}

  .footer
    = f.button :submit, :class => "btn btn-primary btn-lg btn-block"
