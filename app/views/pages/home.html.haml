%section#home_intro
  %h1.text-center.text-white
    Face-to-Face with the
    %br Right Counselor for You


  .home_search_wrapper
    %h4.text-center.text-white
      %em
        To get started, pick your counseling or coaching topic here.
    = form_tag counselors_path, method: :get do |g|
      .row
        .col-sm-3
          = select_tag :specialty, options_from_collection_for_select(Specialty.where(:is_active => true).order(:name => :asc), :name, :name, Specialty.where(:is_active => true, :set_default => 1).first.name), :class => "form-control", :label => false, :include_blank => false
        .col-sm-3
          = select_tag :gender, options_for_select([ "No Preference", "Male", "Female" ]), :class => "form-control", :id => "gender"
        .col-sm-3
          = text_field_tag :datetime, @dts.strftime("%m/%d/%Y"), :class => "form-control"
        .col-sm-3
          = submit_tag "View Now!", :class => "btn btn-primary btn-dark btn-lg btn-block"
    %br
    = form_tag counselors_path, method: :get do |g|  
      .row.orbyname
        .col-sm-6
          = text_field_tag "counselor_name", "", :id => "hdnname", :placeholder => "Search by name", :class => "form-control"
        .col-sm-6
          = submit_tag "Search", :class => "btn btn-primary btn-dark btn-lg btn-block"
:javascript

  $("nav").addClass("nav-special");

  function setDimensions(){
   var windowsHeight = $(window).height();
   $('#home_intro').css('height', windowsHeight + 'px');
  }

  setDimensions();

  //when resizing the site, we adjust the heights of the sections
  $(window).resize(function() {
   setDimensions();
  });
