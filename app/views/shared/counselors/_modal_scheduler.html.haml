/ Modal
.modal.fade{"aria-hidden" => "true", :id => "#{counselor.slug}ScheduleModal", "aria-labelledby" => "#{counselor.slug}ScheduleModal", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
          %span.sr-only Close
        %h4#myModalLabel.modal-title
          Schedule a Session with #{counselor.user.name}
      .modal-body
        = simple_form_for(counselor.counseling_sessions.new) do |f|
          = f.error_notification

          %label
            Session Day
          %h4.text-center
            = @dts.strftime("%B %d, %Y")

          .form-inputs
            = f.hidden_field :counselor_id, :value => counselor.id
            = f.hidden_field :day, :value => @dts
            = f.input :time, collection: counselor.availability_by_dts(@dts).map { |interval| time_as_local(interval)}, input_html: { :class => "selected_time form-control" }, :include_blank => false, :label => "Session Time", :hint => "#{Time.zone.name}"

          .form-actions
            = f.submit "Schedule Session", :class => "btn btn-primary btn-block btn-lg"