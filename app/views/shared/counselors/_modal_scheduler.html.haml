/ Modal
.modal.fade{"aria-hidden" => "true", :id => target_id, :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
          %span.sr-only Close
        %h4#myModalLabel.modal-title
          Schedule with #{counselor.user.name}
      = simple_form_for(counselor.counseling_sessions.new) do |f|
        .modal-body
          = f.error_notification

          %label
            Session Day
          %h4.text-center
            = dts.strftime("%B %d, %Y")

          .form-inputs
            = f.hidden_field :counselor_id, :value => counselor.id
            = f.hidden_field :day, :value => dts
            = f.input :time, collection: counselor.availability_by_dts(dts).map { |interval| time_as_local(interval)}, input_html: { :class => "selected_time form-control" }, :include_blank => false, :label => "Session Time", :hint => "#{Time.zone.name}"

          .counseling_session_price_wrapper
            %table
              %tr
                %td
                  %strong
                    Session Cost
                %td.text-right
                  = number_to_currency(counselor.session_rate_in_dollars)
              %tr
                %td.text-center.text-muted.small{ :colspan => 2 }
                  To be billed at Time of Session

        .modal-footer
          = f.submit "Schedule Session", :class => "btn btn-primary btn-block btn-lg"