%nav.navbar.navbar-default{:role => "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "MoodyCall", root_url, :class => "navbar-brand"
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            = Time.zone.now.strftime("%I:%M%P")
            %small= Time.zone.name
            %span.caret
          %ul.dropdown-menu.timezone_picker{:role => "menu"}
            %li.dropdown-header
              Select Your Timezone
            - ActiveSupport::TimeZone.us_zones.each do |zone|
              %li
                = link_to "#{Time.now.in_time_zone(zone.name).strftime("%I:%M%P")} in #{zone.name}", "", :class => "time_zone", "data-timezone" => zone.name
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to 'Dashboard', user_dashboard_path
          %li
            = link_to 'Settings', edit_user_registration_path
          %li
            = link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %li 
            = link_to "Home", root_url
          %li
            = link_to "Sign up", new_user_registration_path
          %li
            = link_to "Login", new_user_session_path
      / /ul.nav.navbar-right
    / /.navbar-collapse
  / /.container-fluid
/ /nav.navbar

:javascript
  $(".time_zone").click(function() {
    zone = $(this).attr("data-timezone");
    $.cookie("timezone", zone);
  });

