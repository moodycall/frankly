%nav.navbar.navbar-default{:role => "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "MoodyCall", root_url(:subdomain => nil), :class => "navbar-brand"
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.time_zone_nav
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            = Time.zone.now.strftime("%I:%M%P")
            %small= Time.zone.name
            %span.caret
          %ul.dropdown-menu.timezone_picker{:role => "menu"}
            %li.dropdown-header
              Select Your Timezone
            - ActiveSupport::TimeZone.us_zones.each do |zone|
              %li
                = link_to "#{Time.now.in_time_zone(zone.name).strftime("%I:%M%P")} in #{zone.name}", "", :class => "time_zone", "data-timezone" => zone.name
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to 'Dashboard', user_dashboard_url(:subdomain => nil)
          %li
            = link_to 'Favorites', favorite_counselors_url(:subdomain => nil), :id => "primaryNavFavorites"
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              .user_navigation_icon
                = image_tag current_user.photo
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'Payments', credit_cards_url(:subdomain => nil), :id => "primaryNavPayments"
              %li
                = link_to 'Settings', edit_user_registration_url(:subdomain => nil), :id => "primaryNavSettings"
              %li.divider
              %li
                = link_to "Logout", destroy_user_session_url(:subdomain => nil), method: :delete
        - else
          %li 
            = link_to "Home", root_url
          %li
            = link_to "Login", new_user_session_url(:subdomain => nil)
          %li
            = link_to "Sign up", new_user_registration_url(:subdomain => nil), :class => "btn btn-primary navbar-btn"
      / /ul.nav.navbar-right
    / /.navbar-collapse
  / /.container-fluid
/ /nav.navbar

:javascript
  $(".time_zone").click(function() {
    zone = $(this).attr("data-timezone");
    $.cookie("moodcall_timezone", zone, { path: '/' });
    var metaTimezone = {
      zone_name: zone
    };
    Intercom('trackEvent', 'changed_timezone', metaTimezone);
  });

  $("#primaryNavFavorites").click(function() {
    Intercom('trackEvent', 'viewed_favorites');
  });

  $("#primaryNavPayments").click(function() {
    Intercom('trackEvent', 'viewed_payments');
  });

  $("#primaryNavSettings").click(function() {
    Intercom('trackEvent', 'viewed_settings');
  });

