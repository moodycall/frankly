%ul.nav.navbar-nav.navbar-right
  %li
    = link_to 'Search', counselors_url(:datetime => Time.zone.now.strftime("%y-%m-%d")), :id => "primaryNavFavorites"
  - if user_signed_in?
    %li
      = link_to 'Dashboard', user_dashboard_url()
    %li
      = link_to 'Favorites', favorite_counselors_url(), :id => "primaryNavFavorites"
    %li.dropdown
      %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
        .user_navigation_icon
          .fa.fa-user
      %ul.dropdown-menu{:role => "menu"}

        // COUNSELOR OPTIONS
        - if current_user.counselor.present?
          %li.dropdown-header
            Counselor Options
          %li
            = link_to counselor_url(current_user.counselor) do
              .fa.fa-briefcase
              Profile
          %li
            = link_to edit_counselor_url(current_user.counselor) do
              .fa.fa-pencil
              Edit Profile

          %li
            = link_to availability_counselor_url(current_user.counselor) do
              .fa.fa-calendar
              Availability
          %li.divider
        %li
          = link_to credit_cards_url(), :id => "primaryNavPayments" do
            .fa.fa-credit-card
            Payments
        %li
          = link_to edit_user_registration_url(), :id => "primaryNavSettings" do
            .fa.fa-cog
            Settings
        %li.divider
        %li
          = link_to destroy_user_session_url(), method: :delete do
            .fa.fa-sign-out
            Logout

    // ADMIN OPTIONS
    - if current_user and current_user.is_admin
      %li.dropdown
        %a.dropdown-toggle.admin-dropdown{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          .fa.fa-lock
        %ul.dropdown-menu.timezone_picker{:role => "menu"}
          %li.dropdown-header
            Admin Options
          %li
            = link_to specialties_url(:subdomain => "admin") do
              .fa.fa-flag
              Specialties
          %li
            = link_to prompts_url(:subdomain => "admin") do
              .fa.fa-comment
              Prompts
          %li
            = link_to admin_counselor_overviews_url(:subdomain => "admin") do
              .fa.fa-briefcase
              Counselors
          %li
            = link_to admin_counseling_session_overviews_url(:subdomain => "admin") do
              .fa.fa-laptop
              Counseling Sessions
          %li
            = link_to payouts_url(:subdomain => "admin") do
              .fa.fa-money
              Payouts

  - else
    %li
      = link_to "Login", new_user_session_url
    %li
      = link_to "Sign up", new_user_registration_url, :class => "btn btn-primary navbar-btn"