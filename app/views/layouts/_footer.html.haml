.footer_disclaimer_wrapper
  %p.text-center.small
    Copyright MoodyCall LLC 2014 | PO Box 1112 Snellville, GA 30078
  %p.text-center.small
    If you are having thoughts of suicide or otherwise harming yourself, please call national crisis hotline 1 (800) 273-8255. If you are in need of emergency services, please call 911.

/ Modal
#footerShareModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "footerShareModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
        %h4#footerShareModalLabel.modal-title Share
      .modal-body
        = link_to "Share on Twitter", "http://twitter.com/home?status=#{URI.encode("Searching for the right counselor? Checkout @moodycall, ")}#{root_url}", :target => "_blank", :class => "btn btn-primary btn-lg btn-block"
        = link_to "Share via Email", "mailto:?Subject=Checkout%20MoodyCall%20it's%a%20great%20counseling%20tool", :class => "btn btn-primary btn-lg btn-block"
      -# .modal-footer
      -#   %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
      -#   %button.btn.btn-primary{:type => "button"} Save changes

:javascript
  $("#footerTerms").click(function() {
    Intercom('trackEvent', 'viewed_terms');
  });

  $("#footerPrivacy").click(function() {
    Intercom('trackEvent', 'viewed_privacy_policy');
  });

  $("#footer_telephone").click(function() {
    Intercom('trackEvent', 'clicked_support_phone');
  });

  $("#footer_email").click(function() {
    Intercom('trackEvent', 'clicked_support_email');
  });
