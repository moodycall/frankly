- if notice
  %button.close{"data-dismiss" => "alert", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
    %span.sr-only Close
  %p.notice.alert.alert-success= notice
- if alert
  %button.close{"data-dismiss" => "alert", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
    %span.sr-only Close
  %p.alert.alert-danger= alert
