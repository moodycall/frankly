.container
	%h2 Sign in
	= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
		.form-inputs
			.form-group
				= f.input :email, :placeholder => "Email", input_html: { :class => "form-control floatlabel" }, :label => false, required: false, autofocus: true
			.form-group
				= f.input :password, :placeholder => "Password", input_html: { :class => "form-control floatlabel" }, :label => false, required: false
			.form-group
				= f.input :remember_me, as: :boolean if devise_mapping.rememberable?
		.form-actions
			= f.submit "Sign in", :class => "btn btn-primary"
	= render "users/shared/links"
