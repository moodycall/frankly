.container
	.row
		.col-sm-6
			%h1 Dashboard
		.col-sm-6
			- if current_user.counselor.present?
				.pull-right
					%span
						Counselor Options:
					= link_to "View Public Profile", counselor_path(current_user.counselor), :class => "btn btn-link"
					= link_to "Edit Availability", availability_counselor_path(current_user.counselor), :class => "btn btn-link"

	.row
		.col-md-6
			%h3
				.fa.fa-clock-o
				Upcoming Sessions
			%hr.green
			- current_user.upcoming_sessions.order("start_datetime asc").each do |session|
				= render ("shared/sessions/session_preview"), :session => session, :icon => "clock-o"
		.col-md-6
			%h3
				.fa.fa-book
				Session History
			%hr.green
				- current_user.previous_sessions.order("start_datetime desc").each do |session|
					= render ("shared/sessions/session_preview"), :session => session, :icon => "check-circle-o"






		
			