.container
	.row
		.col-sm-6
			%h1 Dashboard

	.row
		.col-md-6
			%h3
				.fa.fa-clock-o
				Upcoming Sessions
			%hr.green
			- current_user.upcoming_sessions.order("start_datetime asc").each do |session|
				= render ("shared/sessions/session_preview"), :session => session, :icon => "clock-o"
		.col-md-6
			%h3
				.fa.fa-book
				Session History
			%hr.green
				- current_user.previous_sessions.order("start_datetime desc").last(5).each do |session|
					= render ("shared/sessions/session_preview"), :session => session, :icon => "check-circle-o"
				.text-center
					= link_to "View Full History", user_session_history_path, :class => "btn btn-link"






		
			