.container
	.row
		.col-sm-4.col-sm-offset-4
			#user_registration_wrapper.user_form_wrapper
				%h2 Sign up
				= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
					= f.error_notification
					.form-inputs
						.form-group
							= f.input :name, required: true, :placeholder => "Name", :label => false, autofocus: true, input_html: { :class => "form-control floatlabel" }
						.form-group
							= f.input :email, required: true, :placeholder => "Email", :label => false, input_html: { :class => "form-control floatlabel" }
						.form-group
							= f.input :password, required: true, :placeholder => "Password", :label => false, input_html: { :class => "form-control floatlabel" }, :hint => "Must be atleast 8 characters"
						.form-group
							= f.input :password_confirmation, required: true, :placeholder => "Repeat Password", :label => false, input_html: { :class => "form-control floatlabel" }
					.form-actions
						= f.submit "Sign up", :class => "btn btn-primary btn-block btn-lg"
			= render "users/shared/links"
