.row
  .col-md-6
    %h1= @counselor.user.name

    %p
      %h3 Professional Biography:
      = @counselor.bio
    %p
      %b Photo:
      = @counselor.photo
    %p
      %b Profession start date:
      = @counselor.profession_start_date
    %p
      %b Slug:
      = @counselor.slug
    %p
      %b User:
      = @counselor.user_id
    %p
      %b Hourly rate in cents:
      = number_to_currency(@counselor.hourly_rate_in_dollars)

  .col-md-6
    %h2 Availability

    %p
      %b Advanced scheduling in weeks:
      = @counselor.advanced_scheduling_in_weeks
    %p
      %b Available monday:
      = @counselor.available_monday
    %p
      %b Available tuesday:
      = @counselor.available_tuesday
    %p
      %b Available wednesday:
      = @counselor.available_wednesday
    %p
      %b Available thursday:
      = @counselor.available_thursday
    %p
      %b Available friday:
      = @counselor.available_friday
    %p
      %b Available saturday:
      = @counselor.available_saturday
    %p
      %b Available sunday:
      = @counselor.available_sunday

