.container-fluid
  .row
    .col-md-6
      %h1= @counselor.user.name

      %p
        = counselor_url(@counselor)
      %p
        %h3 Professional Biography
        = best_in_place @counselor, :bio, :type => :textarea
      
      %hr

      %p
        %b Photo:
        = @counselor.photo
      %p
        %b Profession start date:
        = @counselor.years_in_business
      %p
        %b User:
        = @counselor.user_id
      %p
        %b Hourly rate in cents:
        = number_to_currency(@counselor.hourly_rate_in_dollars)

    .col-md-6
      %h2 Availability

      = link_to "Edit Availability", availability_counselor_path(@counselor)

      %hr

      / = Time.at(time_as_utc(@counselor.availability_intervals.first.start_time).to_time.to_i).in_time_zone(Time.zone).strftime("%I:%M%P")
      %p
        %b Advanced scheduling in weeks:
        = @counselor.advanced_scheduling_in_weeks
      %p
        %b Available monday:
        = @counselor.available_monday
      %p
        %b Available tuesday:
        = @counselor.available_tuesday
      %p
        %b Available wednesday:
        = @counselor.available_wednesday
      %p
        %b Available thursday:
        = @counselor.available_thursday
      %p
        %b Available friday:
        = @counselor.available_friday
      %p
        %b Available saturday:
        = @counselor.available_saturday
      %p
        %b Available sunday:
        = @counselor.available_sunday

  = link_to 'Edit', edit_counselor_path(@counselor)
  |
  = link_to 'Back', counselors_path
