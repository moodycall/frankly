= simple_form_for(@counselor) do |f|
  = f.error_notification

  .form-inputs
    .form-group
      = f.input :bio, :placeholder => "Biography", input_html: { :class => "form-control floatlabel" }, :label => false
    .form-group
      = f.input :profession_start_date, :placeholder => "Profession Start Date", :label => false, as: :string, input_html: { :class => "form-control floatlabel datepicker" }

    .form-group
      = f.association :specialties, input_html: { :class => "form-control" }
    / = f.input :hourly_rate_in_cents
    / = f.input :hourly_fee_in_cents
    .form-group
      = f.label :send_session_sms_alerts, :label => "Send Session Text Alerts"
      = f.input :send_session_sms_alerts, input_html: { :class => "form-control boolean-switch" }, :label => false
    .form-group
      = f.label :send_session_email_alerts, :label => "Send Session Email Alerts"
      = f.input :send_session_email_alerts, input_html: { :class => "form-control boolean-switch" }, :label => false

  .form-actions
    = f.submit "Update Profile", :class => "btn btn-primary btn-block btn-lg"
